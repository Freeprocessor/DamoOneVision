<UserControl x:Class="DamoOneVision.Controls.Keypad.NumericKeypad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="260" Width="230">
    <UniformGrid Columns="3" Rows="4">
        <Button Content="1" Click="OnBtn"/>
        <Button Content="2" Click="OnBtn"/>
        <Button Content="3" Click="OnBtn"/>
        <Button Content="4" Click="OnBtn"/>
        <Button Content="5" Click="OnBtn"/>
        <Button Content="6" Click="OnBtn"/>
        <Button Content="7" Click="OnBtn"/>
        <Button Content="8" Click="OnBtn"/>
        <Button Content="9" Click="OnBtn"/>
        <Button Content="←" Tag="Back" Click="OnBtn"/>
        <Button Content="0" Click="OnBtn"/>
        <Button Content="OK" Tag="Done" Click="OnBtn"/>
    </UniformGrid>
</UserControl>
