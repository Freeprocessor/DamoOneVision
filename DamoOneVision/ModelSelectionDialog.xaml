<!-- ModelSelectionDialog.xaml -->
<Window x:Class="DamoOneVision.ModelSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="모델 선택" Height="300" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox ItemsSource="{Binding ModelList}" 
                 DisplayMemberPath="Name" 
                 SelectedValuePath="Id"
                 SelectedValue="{Binding SelectedModelId, Mode=TwoWay}" />

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Grid.Row="1" Margin="0,10,0,0">
            <Button Content="확인" Width="75" Margin="5" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="취소" Width="75" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
