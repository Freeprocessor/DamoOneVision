<Window x:Class="DamoOneVision.Views.ExitConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#CCFFFFFF"
        ShowInTaskbar="False"
        Topmost="True">

    <Border CornerRadius="10" BorderThickness="1" BorderBrush="Gray" Padding="20" Background="White">
        <StackPanel Width="320">
            <TextBlock Text="프로그램 종료" FontSize="20" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="정말로 프로그램을 종료하시겠습니까?" FontSize="14" TextAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="예" Width="80" Margin="5,0" Click="Yes_Click"/>
                <Button Content="아니오" Width="80" Margin="5,0" Click="No_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
