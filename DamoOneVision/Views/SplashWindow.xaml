<Window x:Class="DamoOneVision.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Loading..."
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="500" Height="300"
        Background="#FFFAFAFA"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        Topmost="True"
        Opacity="0"
        Loaded="Window_Loaded">

    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#DDD" BorderThickness="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- 로고 -->
                <Image Source="/Logo.png" Width="100" Height="100" />

                <!-- 텍스트 -->
                <TextBlock Text="DamoOne Vision를 준비 중입니다..."
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="SlateGray"
                           HorizontalAlignment="Center"/>

                <!-- 로딩 애니메이션 -->
                <ProgressBar IsIndeterminate="True" Width="300" Height="20" Foreground="#2196F3"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
