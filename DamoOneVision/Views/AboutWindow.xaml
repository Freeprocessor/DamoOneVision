<Window x:Class="DamoOneVision.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStyle="None"  
        AllowsTransparency="True"
        Background="#CCFFFFFF"
        ShowInTaskbar="False"
        Topmost="True">

    <Border CornerRadius="10" BorderThickness="1" BorderBrush="Gray" Padding="20" Background="White">
        <StackPanel Width="320">
            <Image Source="/Logo.png" Width="64" Height="64" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="DamoOne Vision" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock Text="버전: 1.0.0" FontSize="16" TextAlignment="Center"/>
            <TextBlock Text="© 2025 DamoVally Co., Ltd." FontSize="14" TextAlignment="Center" Margin="0,10"/>
            <TextBlock Text="연락처: project@damovally.co.kr" FontSize="14" TextAlignment="Center" Margin="0,5"/>
            <Button Content="확인" Width="80" HorizontalAlignment="Center" Margin="0,20,0,0" Click="Close_Click"/>
        </StackPanel>
    </Border>
</Window>
