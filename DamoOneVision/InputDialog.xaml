<Window x:Class="DamoOneVision.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="입력" Height="150" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Message}" Grid.Row="0" Margin="0,0,0,10"/>

        <TextBox Text="{Binding ResponseText}" Grid.Row="1"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="0,10,0,0">
            <Button Content="확인" Width="75" Margin="5" IsDefault="True" Click="OkButton_Click"/>
            <Button Content="취소" Width="75" Margin="5" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>